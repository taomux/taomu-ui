{
  "extends": [
    "./tsconfig.json"
  ],
  "compilerOptions": {
    "noEmit": false,
    "sourceMap": false,
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false
  },
  "exclude": [
    "stories",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/*.doc.ts",
    "**/*.doc.tsx"
  ]
}